{
    "name": "italystrap/module",
    "description": "Generic description",
    "keywords": ["module"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Enea Overclokk",
            "email": "info@overclokk.net",
            "homepage": "https://www.italystrap.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php" : ">=7.2"
    },
    "require-dev": {
        "lucatume/wp-browser": "~2.2",
        "lucatume/function-mocker-le": "^1.0",
        "codeception/c3": "2.*",
        "codeception/module-asserts": "^1.2",
        "italystrap/debug": "~2.0",
        "squizlabs/php_codesniffer": "*",
        "phpcompatibility/php-compatibility": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "phpstan/phpstan": "^0.11.16",
        "szepeviktor/phpstan-wordpress": "^0.3.0",
        "vimeo/psalm": "^3.9",
        "phpbench/phpbench": "@dev",
        "infection/infection": "^0.15.3",
        "phpmetrics/phpmetrics": "^2.5",
        "nunomaduro/phpinsights": "^1.14.0"
    },
    "autoload": {
        "psr-4": {
            "ItalyStrap\\Module\\": "src/"
        },
        "files": [
            "functions/autoload.php"
        ]
    },
    "scripts": {
        "check": [
            ".\\vendor\\bin\\phpcs -p src"
        ],
        "test": [
            "test"
        ],
        "metrics": [
            "vendor/bin/phpmetrics --report-html='./tests/_output/report' ./src"
        ]
    },
    "support"    : {
        "issues": "https://github.com/ItalyStrap/module/issues",
        "source": "https://github.com/ItalyStrap/module"
    }
}
